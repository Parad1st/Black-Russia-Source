<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parad1st_layout_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/registration_back"
    android:orientation="vertical">

    <ImageView
        android:id="@id/reg_person"
        android:layout_width="262.0dip"
        android:layout_height="249.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/person_art" />

    <TextView
        android:id="@+id/reg_info"
        android:layout_width="250.0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/text_back_gray"
        android:fontFamily="@font/montserrat_regular"
        android:paddingLeft="10.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="10.0dip"
        android:text="Введите пароль чтобы войти в игру."
        android:textColor="#ffffffff"
        android:textSize="12.0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.332"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/reg_nickname"
        app:layout_constraintVertical_bias="0.287" />

    <View
        android:id="@+id/view4"
        android:layout_width="295dp"
        android:layout_height="match_parent"
        android:background="#ff212229"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_layout"
        android:layout_width="295dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/finger_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="339dp"
                android:layout_marginBottom="52dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/auto_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Автовход"
                        android:textColor="#ffffffff" />

                    <ImageView
                        android:id="@+id/auto_img3"
                        android:layout_width="17.0dip"
                        android:layout_height="20.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_weight="1.0"
                        app:srcCompat="@drawable/reg_info" />
                </LinearLayout>

                <Switch
                    android:id="@+id/auto_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5.0dip"
                    android:checked="false"
                    android:thumb="@drawable/switch_off_circle"
                    android:track="@drawable/switch_back_track" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/back_but3"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_marginEnd="190dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/finger_but_parad1st"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/frameLayout3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.258">

                <TextView
                    android:id="@+id/parad1st_back3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="2.0dip"
                    android:drawableLeft="@drawable/reg_back_icon"
                    android:drawablePadding="2.0dip"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_vertical"
                    android:text="Вернуться"
                    android:textColor="#ff848ba2"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/finger_but_parad1st"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/reg_finger"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/back_but"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:layout_marginEnd="190dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/password_enter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/password_enter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19">

            <TextView
                android:id="@+id/parad1st_pon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="2.0dip"
                android:drawableLeft="@drawable/reg_back_icon"
                android:drawablePadding="2.0dip"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical"
                android:text="Вернуться"
                android:textColor="#ff848ba2"
                android:textSize="12.0sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="262dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/play_but"
            app:layout_constraintEnd_toEndOf="@+id/play_but"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/play_but"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/auto_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Автовход"
                    android:textColor="#ffffffff" />

                <ImageView
                    android:id="@+id/auto_img"
                    android:layout_width="17.0dip"
                    android:layout_height="20.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    app:srcCompat="@drawable/reg_info" />
            </LinearLayout>

            <Switch
                android:id="@id/auto_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5.0dip"
                android:checked="false"
                android:thumb="@drawable/switch_off_circle"
                android:track="@drawable/switch_back_track" />
        </FrameLayout>

        <Button
            android:id="@id/play_but"
            android:layout_width="246dp"
            android:layout_height="40dp"
            android:layout_marginTop="291dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/donate_tile_button"
            android:fontFamily="@font/montserrat_bold"
            android:text="Играть"
            android:textColor="#ffffffff"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/password_enter"
            android:layout_width="246dp"
            android:layout_height="40dp"
            android:layout_marginTop="113dp"
            android:layout_marginBottom="258dp"
            android:background="@drawable/reg_field"
            android:digits="@string/common_edittext_allowed_characters"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:hint="Введите пароль"
            android:imeOptions="actionSend|flagNoExtractUi|flagNoFullscreen"
            android:inputType="textPassword"
            android:longClickable="true"
            android:maxLength="16"
            android:paddingLeft="14.0dip"
            android:paddingRight="14.0dip"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textColorHint="#ff8a92aa"
            android:textSize="11.0sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/play_but"
            app:layout_constraintStart_toStartOf="@+id/play_but"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/fingerprint_but"
            android:layout_width="246dp"
            android:layout_height="35.0dip"
            android:background="@drawable/reg_white_field"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/play_but"
            app:layout_constraintEnd_toEndOf="@+id/play_but"
            app:layout_constraintStart_toStartOf="@+id/play_but"
            app:layout_constraintTop_toBottomOf="@+id/password_enter"
            app:layout_constraintVertical_bias="0.145">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5.0dip"
                android:background="@drawable/black_finger" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Войти по отпечатку пальца"
                android:textColor="#ff000000"
                android:textSize="11.0sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@id/brlogo"
        android:layout_width="103.0dip"
        android:layout_height="50.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logobrred" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@drawable/reg_border"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:layout_constraintVertical_bias="0.487" />

    <TextView
        android:id="@id/reg_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24.0dip"
        android:layout_marginTop="16.0dip"
        android:fontFamily="@font/montserrat_bold"
        android:text="авторизация"
        android:textAllCaps="true"
        android:textColor="#ffffffff"
        android:textSize="30.0sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/health_bar"
        android:background="@drawable/red_scale"
        android:layout_width="80.0dip"
        android:layout_height="5.0dip"
        android:layout_marginBottom="8.0dip"
        app:layout_constraintBottom_toTopOf="@id/reg_person"
        app:layout_constraintEnd_toEndOf="@id/reg_person"
        app:layout_constraintStart_toStartOf="@id/reg_person"/>

    <TextView
        android:textSize="12.0sp"
        android:textColor="#ffffffff"
        android:id="@+id/reg_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:text="Nick_Name [0]"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintBottom_toTopOf="@id/health_bar"
        app:layout_constraintEnd_toEndOf="@id/health_bar"
        app:layout_constraintStart_toStartOf="@id/health_bar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fin_parad1st"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff212229" />

        <ImageView
            android:id="@+id/scann_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_scan_by_parad1st"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <Button
            android:id="@+id/back_scanner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="102dp"
            android:background="@drawable/donate_tile_button"
            android:fontFamily="@font/montserrat_bold"
            android:text="назад"
            android:textColor="#ffffffff"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/scann_image"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/scann_image"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/text_parad1st_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muller_bold"
            android:text="Сканер"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.402" />

        <ImageView
            android:id="@+id/scann_img"
            android:layout_width="280dp"
            android:layout_height="3dp"
            android:src="@drawable/reg_scan_parad1st"
            app:layout_constraintBottom_toTopOf="@+id/textView18"
            app:layout_constraintEnd_toEndOf="@+id/scann_image"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/scann_image"
            app:layout_constraintTop_toBottomOf="@+id/text_parad1st_scanner"
            app:layout_constraintVertical_bias="0.37" />

        <TextView
            android:id="@id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Приложите палец к сканеру\n                 опечатков"
            android:textColor="#ffffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.568" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
