<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/donate_sc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_window_square_red"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_red_header"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="#ffffffff"
        android:textSize="16sp">

        <TextView
            android:id="@+id/sccap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:singleLine="true"
            android:text="ВЫПОЛНЕНО"
            android:textAllCaps="true"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/closesc"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="8dp"
            android:background="@drawable/menu_close" />
    </FrameLayout>

    <View
        android:id="@+id/scico"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/checkbox_green_icon" />

    <TextView
        android:id="@+id/sc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/muller_regular"
        android:gravity="center"
        android:lineSpacingExtra="3sp"
        android:text="LUX RUSSIA LUX RUSSIA LUX RUSSIA"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/muller_bold"
        android:gravity="center"
        android:lineSpacingExtra="3sp"
        android:text="BY PARAD1ST"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/butonok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/donate_tile_button"
            android:fontFamily="@font/muller_bold"
            android:minWidth="120dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Вернуться"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
